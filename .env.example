# VeiGest - Configurações de Ambiente

# ============================================================================
# APLICAÇÃO
# ============================================================================
APP_NAME="VeiGest"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
API_URL=http://localhost/api

# ============================================================================
# BASE DE DADOS
# ============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=veigest
DB_USER=veigest
DB_PASS=veigest123

# Configurações de conexão
DB_CHARSET=utf8mb4
DB_TABLE_PREFIX=

# ============================================================================
# CACHE (Redis)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# EMAIL (SMTP)
# ============================================================================
SMTP_HOST=mail.exemplo.com
SMTP_PORT=587
SMTP_USERNAME=noreply@veigest.com
SMTP_PASSWORD=senha_email
SMTP_FROM_EMAIL=noreply@veigest.com
SMTP_FROM_NAME="VeiGest Sistema"

# ============================================================================
# AUTENTICAÇÃO JWT
# ============================================================================
JWT_SECRET=sua_chave_secreta_jwt_muito_forte_aqui
JWT_EXPIRE=3600
JWT_REFRESH_EXPIRE=604800

# ============================================================================
# GOOGLE MAPS API
# ============================================================================
GOOGLE_MAPS_API_KEY=sua_chave_api_google_maps

# ============================================================================
# STORAGE E UPLOADS
# ============================================================================
UPLOAD_PATH=/var/www/uploads
UPLOAD_URL=/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# ============================================================================
# ALERTAS E NOTIFICAÇÕES
# ============================================================================
ALERT_DAYS_BEFORE_EXPIRY=30
ALERT_EMAIL_ENABLED=true
ALERT_SMS_ENABLED=false

# Configurações de SMS (opcional)
SMS_PROVIDER=twilio
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM_NUMBER=

# ============================================================================
# BACKUP
# ============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_KEY=
BACKUP_S3_SECRET=

# ============================================================================
# LOGS
# ============================================================================
LOG_LEVEL=info
LOG_MAX_FILES=5
LOG_MAX_SIZE=10MB

# ============================================================================
# SEGURANÇA
# ============================================================================
COOKIE_VALIDATION_KEY=chave_validacao_cookies
ENCRYPTION_KEY=chave_criptografia

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ============================================================================
# INTEGRAÇÃO EXTERNA
# ============================================================================
# APIs de combustível (exemplo)
FUEL_API_KEY=
FUEL_API_URL=

# APIs de seguros (exemplo)
INSURANCE_API_KEY=
INSURANCE_API_URL=

# ============================================================================
# DESENVOLVIMENTO
# ============================================================================
# Configurações específicas para desenvolvimento
YII_DEBUG=true
YII_ENV=dev

# Gii (gerador de código)
GII_ENABLED=true
GII_ALLOWED_IPS=127.0.0.1,::1,192.168.*

# Debug toolbar
DEBUG_TOOLBAR_ENABLED=true
DEBUG_TOOLBAR_ALLOWED_IPS=127.0.0.1,::1,192.168.*

# ============================================================================
# PERFORMANCE
# ============================================================================
# Cache
CACHE_ENABLED=true
CACHE_DURATION=3600

# Query cache
QUERY_CACHE_ENABLED=true
QUERY_CACHE_DURATION=300

# Fragment cache
FRAGMENT_CACHE_ENABLED=true

# ============================================================================
# MONITORIZAÇÃO
# ============================================================================
# Sentry (opcional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# New Relic (opcional)
NEW_RELIC_APP_NAME=VeiGest
NEW_RELIC_LICENSE_KEY=
